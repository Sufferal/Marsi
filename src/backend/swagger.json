{
  "openapi": "3.0.0",
  "info": {
    "title": "Marsi API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Back-end development server"
    }
  ],
  "paths": {
    "/lessons": {
      "get": {
        "tags": ["Lesson"],
        "description": "Get all lessons",
        "summary": "Get all lessons",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "A list of lessons",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Lesson"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": ["Lesson"],
        "description": "Create a new lesson and ensure that id and options are unique in the tests array",
        "summary": "Create a new lesson",
        "produces": ["application/json"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Lesson"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Lesson created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Lesson"
                }
              }
            }
          },
          "400": {
            "description": "Invalid lesson data"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/lessons/{id}": {
      "get": {
        "tags": ["Lesson"],
        "description": "Get a lesson by the uuid (v4)",
        "summary": "Get a lesson by id",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the lesson to get",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A lesson",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Lesson"
                }
              }
            }
          },
          "404": {
            "description": "Lesson not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "tags": ["Lesson"],
        "description": "Update a lesson by the uuid (v4)",
        "summary": "Update a lesson by id",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the lesson to update",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Lesson"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Lesson updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Lesson"
                }
              }
            }
          },
          "400": {
            "description": "Invalid lesson data"
          },
          "404": {
            "description": "Lesson not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "tags": ["Lesson"],
        "description": "Delete a lesson by the uuid (v4)",
        "summary": "Delete a lesson by id",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID of the lesson to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lesson deleted"
          },
          "404": {
            "description": "Lesson not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Lesson": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "level": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced"]
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "default": 0
          },
          "content": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "tests": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/components/schemas/Test"
            }
          }
        },
        "required": [
          "title",
          "level",
          "description",
          "score",
          "content",
          "tests"
        ]
      },
      "Test": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string",
            "minLength": 1
          },
          "answer": {
            "type": "string",
            "minLength": 1
          },
          "options": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
